<domain type='kvm'>
    <name>{{ device.name }}</name>
    {% if device.domain_uuid != '' %}
    <uuid>{{ device.domain_uuid }}</uuid>
    {% endif %}
    <memory unit='MiB'>{{ device.ram }}</memory>
    <vcpu placement='static'>{{ device.cpu }}</vcpu>
    <os>
        <type arch='x86_64' machine='{{ vm_env.pc_type }}'>hvm</type>
        <boot dev='hd'/>
        <!-- <smbios mode='sysinfo'/> -->
    </os>
    <!--
    <sysinfo type='smbios'>
        <bios>
            <entry name='vendor'>{{ device.smbiosManufacturer }}</entry>
        </bios>
        <system>
            <entry name='product'>{{ device.smbiosProduct }}</entry>
            <entry name='version'>{{ device.smbiosVersion }}</entry>
            <entry name='manufacturer'>{{ device.smbiosManufacturer }}</entry>
        </system>
    </sysinfo>
    -->
    <features>
        <acpi/>
        <apic/>
        <!-- <pae/> -->
    </features>
    <clock offset='utc'/>
    <on_poweroff>destroy</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>restart</on_crash>
    <devices>
        <emulator>{{ vm_env.emulator }}</emulator>
        <disk type='file' device='disk'>
            <driver name='qemu' type='qcow2' cache='none' io='native'/>
            <source file='{{ instancePath }}'/>
            <target dev='hda' bus='ide'/>
            <address type='drive' controller='0' bus='0' target='0' unit='0'/>
        </disk>
        {% if secondary_disk_path|length > 0 %}
        <disk type='file' device='disk'>
            <driver name='qemu' type='{{ device.secondaryDiskParams.qemu_type }}' cache='{{ vm_env.cache }}' io='{{ vm_env.io }}'/>
            <source file='{{ secondary_disk_path }}'/>
            <target dev='hdb' bus='{{ device.secondaryDiskParams.bus_type }}'/>
            <address type='drive' controller='0' bus='0' target='0' unit='1'/>
        </disk>
        {% endif %}
        {% if tertiary_disk_path|length > 0 %}
        <disk type='file' device='disk'>
            <driver name='qemu' type='{{ device.tertiaryDiskParams.qemu_type }}' cache='{{ vm_env.cache }}' io='{{ vm_env.io }}'/>
            <source file='{{ tertiary_disk_path }}'/>
            <target dev='hdc' bus='{{ device.tertiaryDiskParams.bus_type }}'/>
            <address type='drive' controller='0' bus='1' target='0' unit='0'/>
        </disk>
        {% endif %}
        <controller type='ide' index='0'>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x1'/>
        </controller>
        <controller type='usb' index='0'>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x2'/>
        </controller>
    {% for interface in device.interfaces %}
          {% if use_ovs and not interface.bridge_preexists %}
          <interface type='bridge'>
              <source bridge='{{ interface.bridge }}'/>
              <virtualport type='openvswitch'/>
              <model type='{{ interface.type }}'/>
              <address type='pci' domain='0x0000' bus='0x00' slot='{{ interface.slot }}' function='0x0'/>
          </interface>
          {% else %}
          <interface type='bridge'>
              <mac address='{{ interface.mac }}'/>
              <source bridge='{{ interface.bridge }}'/>
              <model type='{{ interface.type }}'/>
              <address type='pci' domain='0x0000' bus='0x00' slot='{{ interface.slot }}' function='0x0'/>
          </interface>
          {% endif %}
    {% endfor %}
        <serial type='pty'>
            <target port='0'/>
        </serial>
        <console type='pty'>
            <target type='serial' port='0'/>
        </console>
        <input type='mouse' bus='ps2'/>
        <graphics type='vnc' port='{{ device.vncPort }}' autoport='no' listen='0.0.0.0' passwd='wistar'>
            <listen type='address' address='0.0.0.0'/>
        </graphics>
        <video>
            <model type='cirrus' vram='4' heads='1'/>
            <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
        </video>
    </devices>
</domain>
